<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Authors>Konoplev Anatolii</Authors>
    <Product>Command-Line Forms</Product>
    <Description>This is a framework for make console application with pseudographics interface</Description>
    <Version>1.0.28</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <RepositoryUrl>https://github.com/Ahatornn/clforms</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>command-line, interface, pseudographics, forms</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Copyright>2020 Konoplev Anatolii</Copyright>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageIcon>favico.jpg</PackageIcon>
    <PackageProjectUrl>https://github.com/Ahatornn/clforms</PackageProjectUrl>
    <PackageReleaseNotes>Added "AddColumn()" and "AddRow()" methods for Grid defenitions</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.9" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="3.1.9" />
  </ItemGroup>

  <ItemGroup>
    <None Include="favico.jpg">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
